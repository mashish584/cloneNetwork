<% layout('layout/layout') %>

        <div class="container">
          <div class="row mb-2">
            <form id="post-form" class="col-md-6 col-lg-5 px-2 py-2" enctype="multipart/form-data">
              <div class="user-info">
                <% if(user.image && !isImage){ %>
                      <img src="../images/profile/<%=user.image%>" class="ml-2 mb-2" alt="<%= user.fullname %>">
                <% } else { %>
                      <img src="<%= user.image %>" class="ml-2 mb-2" alt="<%= user.fullname %>">
                <% } %>
                  <span class="ml-2"><%= user.fullname %></span>
              </div>
              <div class="form-group">
                    <textarea name="body" maxlength="120" class="form-control body" placeholder="Share an update"></textarea>
              </div>
              <div class="form-group">
                <label for="upload" name="uploadPost" class="px-2"><i class="fa fa-camera mr-2"></i> Upload Photo</label>
                <input type="file" name="upload" class="upload">
                <div class="progress">
                    <div class="progress-bar" role="progressbar"  aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
              </div>
              <button type="submit" name="Share" class="btn-post mr-2">Post</button>
            </form>
          </div>
          <!-- posts -->
          <div id="postsParent">
             <% if(posts.length > 0){ %>
                <% for(var i=0;i<posts.length;i++){ %>
                    <% include partials/includes/posts %>
                <% } %>
              <% } %>
          </div>
        </div>
       

        <!-- Modal -->
        <div class="modal fade" id="postModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content  py-3">
                <div class="modal-body">
                    
                </div>
            </div>
          </div>
       </div>

       

       

       <!-- Panels  -->
      <% include partials/panels/panel %>

